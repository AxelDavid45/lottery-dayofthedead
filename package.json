{
  "name": "loteria-dia-muertos",
  "version": "1.0.0",
  "description": "Multiplayer Lotería game with Día de Muertos theme",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "type": "module",
  "scripts": {
    "dev": "npm run dev --workspace=server",
    "start": "npm start --workspace=server",
    "client:dev": "npm run dev --workspace=client",
    "client:build": "npm run build --workspace=client",
    "server:dev": "npm run dev --workspace=server",
    "server:start": "npm start --workspace=server"
  },
  "keywords": [
    "loteria",
    "dia-muertos",
    "juego",
    "multijugador",
    "day-of-the-dead",
    "mexican-game",
    "multiplayer"
  ],
  "author": "Lotería del Mictlán Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AxelDavid45/lottery-dayofthedead.git"
  },
  "bugs": {
    "url": "https://github.com/AxelDavid45/lottery-dayofthedead/issues"
  },
  "homepage": "https://github.com/AxelDavid45/lottery-dayofthedead#readme",
  "dependencies": {
    "chrome-devtools-mcp": "^0.9.0",
    "socket.io-client": "^4.8.1"
  }
}
